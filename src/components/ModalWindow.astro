<div
  class="relative z-50 hidden"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
  id="modal-window"
>
  <!-- Enhanced Backdrop -->
  <div class="fixed inset-0 bg-gray-900/80 backdrop-blur-sm transition-all duration-300 ease-in-out"></div>

  <!-- Modal Container -->
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 sm:p-6 lg:p-8">
      <!-- Modal Content -->
      <div class="relative transform overflow-hidden rounded-xl bg-white shadow-2xl transition-all duration-300 ease-in-out w-full max-w-lg">
        <!-- Modal Body -->
        <div class="bg-white">
          <slot />
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced Styles -->
<style>
  /* Smooth show/hide animations */
  #modal-window:not(.hidden) {
    animation: modalFadeIn 0.3s ease-in-out;
  }

  #modal-window:not(.hidden) .transform {
    animation: modalSlideIn 0.3s ease-in-out;
  }

  @keyframes modalFadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-16px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Enhanced backdrop blur effect */
  #modal-window .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }

  /* Shadow enhancement for better depth */
  #modal-window .shadow-2xl {
    box-shadow: 
      0 25px 50px -12px rgba(0, 0, 0, 0.25),
      0 0 0 1px rgba(0, 0, 0, 0.05),
      0 10px 20px rgba(0, 0, 0, 0.1);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    #modal-window .max-w-lg {
      max-width: calc(100vw - 2rem);
    }
  }
</style>
